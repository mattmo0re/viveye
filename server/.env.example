NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb://localhost:27017/viveye
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional Tor onion overrides (for OS-level Tor setups)
# Provide either the onion hostnames directly or paths to the hostname files.
# TOR_BACKEND_ONION=
# TOR_FRONTEND_ONION=
# TOR_AGENT_ONION=
# TOR_BACKEND_HOSTNAME_FILE=
# TOR_FRONTEND_HOSTNAME_FILE=
# TOR_AGENT_HOSTNAME_FILE=

# Neon / Postgres (optional)
# Use your pooled Neon connection string; Neon handles TLS
DATABASE_URL=postgresql://USER:PASSWORD@HOST-pooler.region.neon.tech/DB?sslmode=require
PG_POOL_SIZE=10
# Optional: channel binding (require|prefer|disable)
# PG_CHANNEL_BINDING=require
